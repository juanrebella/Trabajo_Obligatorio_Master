<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_amber_800"
    tools:context="com.example.nacho.trabajo_obligatorio_11_12_2017.View.Registro">


        <LinearLayout
            android:id="@+id/ltsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/restaurant"
                android:layout_gravity="center"
                />


            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/nombre"
                android:layout_gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtApellido"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/app_surname"
                android:layout_gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/email"
                android:layout_gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:hint="@string/password"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtRepPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:hint="@string/RepPassword"
                android:textSize="20sp" />



            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Registrarse" />

            <TextView
                android:id="@+id/iniSesionReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_sesion_en_registro"
                android:layout_gravity="center"
                android:textColor="@color/md_black_1000"/>


        </LinearLayout>
</RelativeLayout>