<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_kitkat_height"
            android:background="?colorPrimary"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_lollipop_height"
            android:background="?colorPrimaryDark"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/llmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_margin_top">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/smartImageView"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:paddingTop="20dp" />

          <TextView
              android:id="@+id/txtTituloDescrip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:text="MenÃº"
              android:textColor="@color/md_black_1000_50"
              android:textStyle="bold"
              android:layout_marginLeft="10dp"
              android:textSize="25sp"/>
          <TextView
              android:id="@+id/txtDescripcion"
              android:layout_width="300dp"
              android:layout_height="150dp"
              android:text=""
              android:layout_marginTop="10dp"
              android:layout_marginLeft="40dp"
              android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn_decrement_ofertaspublic"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@drawable/btn_increment_cart"
                    android:gravity="center"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="12pt"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCantidadProductoOfertas_public"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="2"
                    android:background="@drawable/style_input_pedido"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btn_Increment_Ofertas_public"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background=""
                    android:gravity="center"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="12pt"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="4" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="@bool/fitsSystemWindows"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:theme="@style/NavigationViewTheme" />

</android.support.v4.widget.DrawerLayout>
